# SVG to HDMI output test

import tkinter as tk

def create_window_on_second_monitor():
    # Create the main window
    root = tk.Tk()
    root.title("Main Window")
    root.geometry("300x200+100+100") # Initial position on primary monitor

    # Create a Toplevel window (which can be moved independently)
    second_window = tk.Toplevel(root)
    second_window.title("Second Monitor Window")

    # Get screen dimensions (optional, for more precise placement)
    # screen_width = root.winfo_screenwidth()
    # screen_height = root.winfo_screenheight()

    # Calculate the position for the second monitor.
    # This example assumes the second monitor starts at x=1920 (typical Full HD width)
    # Adjust this value based on your actual monitor setup and resolution.
    x_position_on_second_monitor = 100  # 50 pixels from the left edge of the second monitor
    y_position_on_second_monitor = -700 + 50  # 50 pixels from the top edge of the second monitor

    # Set the geometry of the second window
    second_window.geometry(f"400x300+{x_position_on_second_monitor}+{y_position_on_second_monitor}")

    # Add a label to the second window
    tk.Label(second_window, text="This window is on the second monitor!").pack(pady=20)

    root.mainloop()

if __name__ == "__main__":
    create_window_on_second_monitor()